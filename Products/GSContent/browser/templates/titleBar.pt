<tal:block tal:define="view options/view;">
  <div tal:attributes="id python:view.siteTextShow and 'titlebar' or 'sitelogo'">
    <img tal:condition="view/siteImageShow"
      src="/foo" title="Site Logo"
      tal:attributes="src string:/${view/siteImageUrl};
        title python:'Logo for %s' % view.siteInfo.name"/>
    <span tal:condition="view/siteTextShow"
      tal:content="python:view.siteInfo.name"
      class="division"/>
  </div>
</tal:block>

